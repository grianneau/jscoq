{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": ["esnext", "dom", "dom.iterable", "webworker"],
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true
    // "noEmit": true
  },
  "include": [ "frontend/**/*.ts", "backend/**/*.ts"],
  "exclude": [".git", "_build", "_vendor+v8.16+32bit", "dist", "dist-cli", "node_modules", "backend/wasm/shims", "vendor"]
}
